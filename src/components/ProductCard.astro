---
import type { Product } from '@/pages/store.astro';
import {
  Card,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card"

interface Props {
  product: Product
}
const {product} = Astro.props
---

<Card className="flex flex-col justify-between group max-h-[640px] max-w-xs">
  <CardHeader className="flex flex-col justify-center items-center">
    <div class="flex flex-col justify-center items-center w-full max-h-[240px]">
      <img src={product.image} alt={product.title} class="max-h-[180px]"/>
    </div>
    <CardTitle className="text-3xl">{product.title}</CardTitle>
    <CardDescription>{product.category}</CardDescription>
  </CardHeader>
  <CardFooter>
    <p>$ {product.price}</p>
  </CardFooter>
</Card>
